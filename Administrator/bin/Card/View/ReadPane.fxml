<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Card.Control.ReadPaneController">
    <TextArea fx:id="TAReadCard" disable="true" editable="false" promptText="Read Card">
      <VBox.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
      </VBox.margin>
      <font>
         <Font name="System Bold Italic" size="15.0" />
      </font>
    </TextArea>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
      <buttons>
          <Button fx:id="BtnRead" mnemonicParsing="false" onAction="#BtnRead" text="Read" />
        <Button fx:id="BtnClear" mnemonicParsing="false" onAction="#BtnClear" text="Clear" />
        </buttons>
      <VBox.margin>
        <Insets left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
    </ButtonBar>
</VBox>
